<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.wecraw.treatyourself.activities.MainActivity">



    <Button
        android:text="Log Event"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLogEvent"
        android:layout_weight="1"
        android:onClick="logEvent"
        android:textSize="28sp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/home_button_background"
        android:drawableRight="@drawable/log_event_icon"
        android:paddingRight="20dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_margin="5dp"/>

    <Button
        android:text="@string/todo_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTodo"
        android:layout_weight="1"
        android:background="@drawable/home_button_background"
        android:drawableRight="@drawable/check_in_box_icon"
        android:paddingRight="20dp"
        android:textAllCaps="false"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:layout_margin="5dp"
        />

    <Button
        android:text="@string/new_event"

        android:onClick="newEvent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCreateEvent"
        android:layout_weight="1"
        android:textSize="28sp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/home_button_background"
        android:drawableRight="@drawable/new_activity_icon"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:paddingRight="20dp" />

    <Button
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/user_profile_icon"
        android:id="@+id/buttonUserDetail"
        android:text="@string/your_profile"
        android:background="@drawable/home_button_background"
        android:drawableRight="@drawable/user_profile_icon"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:onClick="yourProfile"
        android:layout_weight="1"
        android:paddingRight="20dp" />


</LinearLayout>
